{
    "asyncapi": "2.4.0",
    "info": {
        "title": "Intellector WebSocket API",
        "version": "1.0.0",
        "description": "This API is in charge of any event-driven interaction with the Intellector server (that is, anything that cannot be achieved via REST endpoints). Primary uses: online status check, notifications, in-game events"
    },
    "channels": {
        "/": {
            "subscribe": {
                "message": {
                    "$ref": "#/components/messages/UserSignedUp"
                }
            }
        }
    },
    "components": {
        "messages": {
            "UserSignedUp": {
                "payload": {
                    "type": "object",
                    "properties": {
                        "displayName": {
                            "type": "string",
                            "description": "Name of the user"
                        },
                        "email": {
                            "type": "string",
                            "format": "email",
                            "description": "Email of the user"
                        }
                    }
                }
            }
        }
    }
}
